<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffffff" />
            <corners android:radius="10dp" />
            <gradient android:endColor="#ff0d5ab5" android:startColor="#ff3d45f8" />
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffffff" />
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#ff2aa5b5" android:startColor="#ff2de8f8" />
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />
        </shape>
    </item>
</selector>