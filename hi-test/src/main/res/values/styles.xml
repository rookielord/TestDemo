<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTheme" parent="AppTheme">
        <item name="android:theme">@android:style/Theme.NoTitleBar</item>
    </style>
<!--蓝牙连接列表，引用了Connect-->
    <style name="BluetoothText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#882aa5b5</item>
        <item name="android:padding">5dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="SurveyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 项目中的内容-->
    <style name="ProjectTitle">
        <item name="android:background">#FF2A9AAA</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProjectInfo">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ProjectLayout">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!-- 项目创建的对话框的格式-->
    <style name="EditType">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="SpinnerType">
        <item name="android:textColor">#ff000000</item>
        <item name="android:padding">20dp</item>
    </style>
    <!-- GPS地图显示-->
    <style name="GPSinfo">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- 点位信息显示-->
    <style name="ManageTitle">
        <item name="android:gravity">center</item>
        <item name="android:background">#FF35E6F6</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ManageInfo">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/manage_title_item</item>
    </style>

    <style name="ManagePointItem">
        <item name="android:background">@drawable/manage_point_item</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 点位添加的信息-->
    <style name="AddPointTitle">
        <item name="android:background">@drawable/point_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="AddPointInfo">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AddPointText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 设备连接时的样式-->
    <style name="ConnectButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/connect_selector</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="ConnectInfo">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff0d5ab5</item>
    </style>
    <!-- 采集数据时的样式-->
    <style name="SurveyInfo">
        <item name="android:background">@drawable/surveybackgroud</item>
        <item name="android:padding">5dp</item>
    </style>
<!--导出数据时的样式-->
    <style name="exchange_br">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#FF35E6F6</item>
    </style>
    <style name="exchange_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 自定义title的内容-->
    <style name="custom_title_text">
        <item name="android:gravity">center</item>
    </style>

</resources>
