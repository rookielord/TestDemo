<?xml version="1.0" encoding="utf-8"?>
<!--这个是listview中显示的数据，相当于getView中自定义的view-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        />

    <com.zhd.hi_test.ui.MyScrollView
        android:id="@+id/item_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_B"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:textColor="#011"
                android:gravity="center" />

            <TextView
                android:id="@+id/item_L"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:textColor="#191"
                android:gravity="center" />

            <TextView
                android:id="@+id/item_H"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:textColor="#101"
                android:gravity="center" />

            <TextView
                android:id="@+id/item_DES"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:textColor="#111"
                android:gravity="center" />
        </LinearLayout>
    </com.zhd.hi_test.ui.MyScrollView>
</LinearLayout>