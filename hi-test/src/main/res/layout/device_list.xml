<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pairedlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pairedlist"
            android:visibility="gone"
            style="@style/BluetoothText"/>

        <ListView
            android:id="@+id/lv_pairedlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:divider="#ffff4834"></ListView>

        <TextView
            android:id="@+id/tv_newlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newlist"
            android:visibility="gone"
            style="@style/BluetoothText"/>

        <ListView
            android:id="@+id/lv_newlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:layout_weight="1"
            android:divider="#ff7bff5d"></ListView>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/search" />
        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止搜索"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>